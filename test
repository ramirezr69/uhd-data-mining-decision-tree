def printMyTree(node, characterIndex): #(node)
    dot.node(chr(characterIndex), str(node))
    print(node)
    if node.children != 0:
        parent = characterIndex
        print parent
        for x in node.children:
            print(x)
            characterIndex += 1
            dot.node(chr(characterIndex), str(x))
            #dot.edges([chr(parent) + chr(characterIndex)])
            print(characterIndex)
            printMyTree(x, characterIndex)
        print(characterIndex)
        characterIndex += len(node.children)
        print characterIndex
    if not node.children:
        print 'I have no Children!'

def printTree(node, characterIndex): #(node)
    characterIndex +=  1
    dot.node(chr(characterIndex), str(node))
    print(node)
    if node.children != 0:
        parent = characterIndex
        #print parent
        for x in node.children:
            characterIndex += 1
            #dot.node(chr(characterIndex), str(x))
            #dot.edges([chr(parent) + chr(characterIndex)])
            #print(characterIndex)
            printTree(x, characterIndex)
        characterIndex += len(node.children)


def tree2(node):
    global characterIndex
    global availableIndex
    print('Parent', str(node))
    print('Parent Index', characterIndex)

    if not node.children:
        print 'I have no Children!'

    children_nodes = []
    children_nodes_index = []

    if node.children != 0:
        for x in node.children:
            print('Child', str(x))
            characterIndex += 1
            availableIndex += 1
            print 'Child Index',availableIndex
            children_nodes.append(x)
            children_nodes_index.append(availableIndex)
        print('\n')
        counter = 0
        for child in children_nodes:
            characterIndex = children_nodes_index[counter]
            counter += 1
            tree(child)


